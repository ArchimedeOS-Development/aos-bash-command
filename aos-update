#!/bin/bash

# Couleurs
RED="\e[31m"
GREEN="\e[32m"
YELLOW="\e[33m"
CYAN="\e[36m"
BOLD="\e[1m"
RESET="\e[0m"

clear
echo -e "${CYAN}${BOLD}üîÑ ArchimedeOS - Mise √† jour syst√®me${RESET}\n"

# √âtape 1 : mise √† jour via pacman
echo -e "${YELLOW}‚û° Mise √† jour des paquets officiels (pacman)...${RESET}"
sudo pacman -Syu

# √âtape 2 : mise √† jour via AUR helper
if command -v yay &>/dev/null; then
    echo -e "\n${YELLOW}‚û° Mise √† jour des paquets AUR (yay)...${RESET}"
    yay -Syu --noconfirm
elif command -v paru &>/dev/null; then
    echo -e "\n${YELLOW}‚û° Mise √† jour des paquets AUR (paru)...${RESET}"
    paru -Syu --noconfirm
else
    echo -e "\n${RED}‚ùå Aucun helper AUR trouv√© (yay ou paru manquant).${RESET}"
fi

# Fin
echo -e "\n${GREEN}${BOLD}‚úÖ Syst√®me ArchimedeOS √† jour !${RESET}"
